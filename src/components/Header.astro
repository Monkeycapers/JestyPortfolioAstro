---
import Moon from "../assets/moon.svg?raw";
import Sun from "../assets/sun.svg?raw";

import resumeReference from "../assets/resume.pdf";
---

<script>
  import ThemeHelper from "../lib/theme/theme";
  const themeHelper = new ThemeHelper();

  function toggleTheme() {
    if (themeHelper.getTheme() == "dark") {
      themeHelper.setTheme("light");
    } else {
      themeHelper.setTheme("dark");
    }
    setThemeButton();
  }

  function setThemeButton() {
    if (themeHelper.getTheme() == "light") {
      document.getElementById("night-image")?.classList.remove("hidden");
      document.getElementById("day-image")?.classList.add("hidden");
    } else {
      document.getElementById("night-image")?.classList.add("hidden");
      document.getElementById("day-image")?.classList.remove("hidden");
    }
  }

  setThemeButton();
  document
    .getElementById("toggle-theme")
    ?.addEventListener("click", toggleTheme);
</script>
<div class="navbar">
  <div class="inner">
    <div class="logo">
      <div>
        <div class="stylish">
          <span> </span>
        </div>
      </div>
      <div>
        JESTY
        <div class="sub">Portfolio</div>
      </div>
    </div>
    <div class="links">
      <div class="link"><a href="/">Home</a></div>
      <div class="link"><a href={resumeReference}>Resume</a></div>
      <div class="link">
        <a href="/" id="projects">Projects</a>
      </div>
      <div class="link">
        <a href="#" id="toggle-theme">
          <span id="night-image" class="hidden">
            <Fragment class="nightimage" set:html={Moon} />
          </span>
          <span id="day-image" class="hidden">
            <Fragment class="dayimage" set:html={Sun} />
          </span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .navbar {
    width: 70%;
    height: auto;
    padding-top: 25px;
    padding-bottom: 3px;
    padding-left: 15%;
    padding-right: 15%;
    background-color: var(--nav-background-color);
    color: var(--nav-text-color);

    .inner {
      height: 60px;

      .logo {
        float: left;
        width: auto;
        display: flex;
        font-weight: bold;
        font-size: 20px;
        margin-top: 0;

        .stylish {
          margin-top: 6px;
          margin-right: 6px;
          display: flex;

          span {
            width: 5px;
            height: 38px;
            background-color: var(--accent-color);
          }
        }

        .sub {
          font-size: 14px;
        }
      }

      .links {
        float: right;
        width: auto;
        padding-top: 8px;

        .link {
          display: inline-block;
          padding-left: 10px;
          padding-right: 10px;

          a {
            font-weight: 18px;
            text-decoration: none;
            color: var(--nav-text-color);
          }

          a:hover {
            color: var(--accent-color);
          }
        }
      }

      .hidden {
        display: none;
      }
    }
  }

  @media (max-width: 550px) {
    .navbar {
      width: 90%;
      padding-left: 5%;
      padding-right: 5%;
    }
  }
</style>
